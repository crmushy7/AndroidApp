<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#54ff56"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutForRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000ffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/roundedwhitewithoutborder"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/receiptKifupi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedhistory"
                android:padding="15px"
                android:text="MB"
                android:textColor="#333366"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                android:textSize="25dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/receiptName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Gidion Mushi"/>
                <TextView
                    android:id="@+id/receiptStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debit"
                    android:textColor="#ff0000"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/roundedred"
                    android:padding="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/receiptAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Tsh 250000"/>
                <TextView
                    android:id="@+id/receiptDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="02/12/2022"/>
                <TextView
                    android:id="@+id/receiptTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="11:45 Am"/>

            </LinearLayout>
