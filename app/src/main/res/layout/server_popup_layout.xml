<!-- res/layout/server_popup_layout.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to show received text -->
    <TextView
        android:id="@+id/textViewReceivedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Received Text: "
        android:textSize="16sp" />

    <!-- EditText to enter and send text -->
    <EditText
        android:id="@+id/editTextServerMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your message" />

    <!-- Button to send the entered text -->
    <Button
        android:id="@+id/buttonSendServerMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send" />

</LinearLayout>
